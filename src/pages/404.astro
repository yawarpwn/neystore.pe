---
import Layout from '@/layouts/Layout.astro'
import Button, { buttonVariants } from '@/components/ui/Button.astro'
---

<Layout title="Pagina No Encontrada">
  <section class="min-h-[calc(100svh-4rem)]">
    <div class="flex flex-col items-center gap-y-10 sm:gap-y-12 md:gap-y-14 text-center mt-36 sm:mt-44 lg:mt-48">
      <h2
        class="text-[7.5rem]/[1] sm:text-9xl md:text-[8.5rem]/[1] lg:text-[9rem]/[1] xl:text-[10rem]/[1] capitalize font-semibold">
        404
      </h2>
      <p class="md:text-lg max-sm:px-5 font-medium"> La pagina que buscas no existe o ha sido eliminada </p>
      <div class="flex items-center gap-x-12 max-sm:flex-col max-sm:gap-y-6 mt-1 sm:mt-3 md:mt-3.5 xl:mt-4">
        <a
          class={buttonVariants({ size: 'lg' })}
          data-astro-reload
          href="/">
          <span class="text-gradient uppercase">Volver al Inicio</span>
        </a>
        <p class="select-none text-xs font-semibold uppercase"> o </p>
        <a
          class={buttonVariants({ size: 'lg', variant: 'outline' })}
          data-astro-reload
          href="/contacto">
          <span class="text-gradient uppercase">Contactanos</span>
        </a>
      </div>
    </div>
  </section>
</Layout>
