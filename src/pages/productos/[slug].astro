---
import ProductRanking from '@/components/ProductRanking.astro'
import ProductViewer from '@/components/ProductViewer.astro'
import ProductPrice from '@/components/ProductPrice.astro'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
import { cn } from '@/lib/utils'
import { type Product } from '@/types'
import Button, { buttonVariants } from '@/components/ui/Button.astro'
import site from '@/constants/site'
// import products from '@/muckup/products.json'
import { getProducts } from '@/lib/data'

export async function getStaticPaths() {
  const products = await getProducts()

  return products.map((product) => {
    return {
      params: { slug: product.slug },
      props: { product },
    }
  })
}
// const { id } = Astro.params
export interface Props {
  product: Product
}
const { product } = Astro.props
const { title, images, id, features, details, video } = product
const productUrl = new URL(Astro.url.pathname, Astro.site)
---

<Layout
  {title}
  description={title}
  image={images[0].url}
  url={productUrl}>
  <div class="md:hidden">
    <a
      href="/productos"
      class="inline-flex items-center gap-3 hover:cursor-pointer mt-4">
      <Icon name="tabler:arrow-narrow-left" />
      <span class="text-sm"> Volver </span>
    </a>
  </div>
  <section class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
    <article class="relative">
      <div class="md:sticky md:h-[calc(100svh)] top-16 left-0">
        <div class="flex items-center justify-center">
          <ProductViewer
            {video}
            {id}
            {images}
            {title}
          />
        </div>
      </div>
    </article>
    <section class="flex flex-col gap-6 overflow-x-hidden">
      <!-- Title -->
      <div class="my-4">
        <h1
          class="text-2xl/snug md:text-3xl/snug font-semibold"
          transition:name={`product-title-${id}`}>
          {product.title}
        </h1>
      </div>

      <!-- Price & Ranking -->
      <div>
        <ProductRanking
          {id}
          size="lg"
          ranking={product.ranking}
        />
        <ProductPrice
          {id}
          size="lg"
          price={product.price}
        />
      </div>

      <!-- Whatsapp Button -->
      <div>
        <a
          href={`https://wa.me/51${site.phone}?text=Hola,%20estoy%20interesado%20en%20el%20producto%20${title}, este es su enlace ${productUrl}`}
          rel="noopener noreferrer"
          target="_blank"
          class={cn(buttonVariants({ variant: 'outline', size: 'lg' }), `w-full md:max-w-md`)}>
          <span>Comprar</span>
          <Icon
            class="ml-2"
            name="tabler:brand-whatsapp"
            size={24}
          />
        </a>
      </div>

      <!-- Details -->
      <div>
        <h2 class="text-2xl font-bold text-yellow mb-4">Detalles</h2>
        <table class="w-full">
          <tbody>
            {
              details &&
                Object.entries(details).map(([key, value]) => (
                  <tr class="border-b">
                    <td class="p-2.5">{key}</td>
                    <td class="p-2.5">{value}</td>
                  </tr>
                ))
            }
          </tbody>
        </table>
      </div>

      <!-- Features -->
      {
        features && (
          <div>
            <h2 class="text-2xl text-yellow font-bold mb-4"> Sobre el Producto </h2>
            <ul class="flex flex-col gap-4">
              {features.length > 0 && features.map((feature) => <li class="list-disc ml-4">{feature}</li>)}
            </ul>
          </div>
        )
      }
      <article>
        <h3 class="text-2xl font-bold mb-4">Tiempo de entrega</h3>
        <p>Delivery en Lima y envíos por agencia sugeridad a nivel nacional</p>
        <ul class="list-disc ml-4">
          <li> 1 día hábil</li>
          <li>Si deseas Delivery en el mismo día consultar</li>
        </ul>
      </article>
      <article>
        <h3 class="text-2xl font-bold mb-4">Horario de Atencion</h3>
        <p>De Lunes a Sábado de 10:00AM - 07:00PM</p>
      </article>
    </section>
  </section>
</Layout>
