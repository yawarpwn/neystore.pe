---
import Button from '@/components/ui/Button.astro'
import { Icon } from 'astro-icon/components'
---

<form
  class="w-full space-y-4"
  onsubmit="return false">
  <div class="flex w-full gap-4 max-lg:flex-col">
    <div class="space-y-2 grow">
      <input
        class="flex h-10 w-full rounded bg-foreground/5 px-3 py-5 text-sm font-medium text-neutral-950 transition-colors placeholder:text-neutral-500 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-neutral-600 disabled:cursor-not-allowed disabled:opacity-50"
        placeholder="Nombre"
        name="name"
        aria-describedby=":r11R2p:-form-item-description"
        aria-invalid="false"
        value=""
      />
    </div>
    <div class="space-y-2 grow">
      <input
        type="email"
        class="flex h-10 w-full rounded bg-foreground/5 px-3 py-5 text-sm font-medium text-neutral-950 transition-colors placeholder:text-neutral-500 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-neutral-600 disabled:cursor-not-allowed disabled:opacity-50"
        placeholder="Correo"
        name="email"
        aria-describedby=":r11R4p:-form-item-description"
        aria-invalid="false"
        value=""
      />
    </div>
  </div>
  <div class="space-y-2">
    <textarea
      class="flex min-h-44 w-full rounded bg-foreground/5 px-3 py-2 text-sm font-medium text-neutral-950 ring-offset-neutral-600 placeholder:text-neutral-500 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-neutral-950 focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 resize-none"
      placeholder="Mensaje"
      name="message"
      aria-describedby=":r11R19:-form-item-description"
      aria-invalid="false"
    ></textarea>
  </div>
  <Button
    class="w-full"
    type="submit"
    >Enviar Mensaje</Button
  >
</form>
