---
import type { HTMLAttributes } from 'astro/types'
import { cn } from '@/lib/utils'
import { cva, type VariantProps } from 'class-variance-authority'

export const buttonVariants = cva(
  `
  inline-flex justify-center items-center whitespace-nowrap rounded-md
  text-sm font-medium transition-colors 
`,
  {
    variants: {
      variant: {
        default: 'gradient-accent text-black',
        secondary: 'bg-secondary text-secondary-foreground',
        link: 'text-primary underline-offset-8 hover:underline decoration-secondary decoration-wavy',
        outline: 'border-gradient text-[#ec8274]',
        icon: '',
        ghost: '',
      },
      size: {
        default: 'h-9 px-4 py-2',
        sm: 'h-8 rounded-md px-3 text-xs',
        lg: 'h-10 rounded-md px-8',
        icon: 'w-9 h-9 w-full',
      },
    },
    defaultVariants: {
      variant: 'default',
      size: 'sm',
    },
  },
)

export interface Props
  extends HTMLAttributes<'button'>,
    VariantProps<typeof buttonVariants> {}

const { variant, size } = Astro.props
---

<button
  class={cn(buttonVariants({ variant, size }), Astro.props.class)}
  {...Astro.props}
>
  <slot />
</button>
