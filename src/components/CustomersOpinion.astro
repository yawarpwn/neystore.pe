    {
      reviews.map((review) => (
        <div class="p-4 flex flex-col bg-secondary rounded-md border-gradient">
          <ProductRanking ranking={review.rating} />
          <p class="mb-4">{review.comment}</p>
          <div class="flex justify-end">
            <small>{review.name}</small>
